<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/dg_background"
        android:src="@drawable/background_dialog_light_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/dg_modal_background"
        android:src="@drawable/background_card_full"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.80"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/iv_msg_warning"
        android:src="@drawable/ic_msg_success"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.17"
        app:layout_constraintStart_toStartOf="@id/dg_modal_background"
        app:layout_constraintEnd_toEndOf="@id/dg_modal_background"
        app:layout_constraintTop_toTopOf="@id/dg_modal_background"
        app:layout_constraintBottom_toBottomOf="@id/dg_modal_background"
        />

    <TextView
        android:id="@+id/tv_title_confirmation"
        style="@style/h_28_r_b_c_gr1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth="wrap_content"
        app:layout_constraintHeight="wrap_content"
        android:text="@string/text_title_success"
        app:layout_constraintVertical_bias="0.10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_msg_warning"
        app:layout_constraintBottom_toBottomOf="@id/dg_modal_background"
        />

    <TextView
        android:id="@+id/tv_subtitle_confirmation"
        style="@style/h_9_r_r_n_c_p"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.64"
        app:layout_constraintHeight="wrap_content"
        tools:text="@string/place_holder_text_subtitle_sign_up"
        android:text="@string/text_subtitle_sign_up"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/dg_modal_background"
        app:layout_constraintEnd_toEndOf="@id/dg_modal_background"
        app:layout_constraintTop_toBottomOf="@id/tv_title_confirmation"
        app:layout_constraintBottom_toBottomOf="@id/dg_modal_background"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_accept"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/btn_selector.btn_relative_43_130_25_gr_1"
        app:layout_constraintWidth_percent="0.43"
        app:layout_constraintDimensionRatio="130:25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_confirmation"
        app:layout_constraintBottom_toBottomOf="@id/dg_modal_background"
        >

        <TextView
            style="@style/h_16_r_b_l_wh_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_success"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>