<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/margin_16dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.volunteering.clothingapp.presentation.base.ItemStatusView
                android:id="@+id/item_status_view_impl"
                android:layout_width="100dp"
                android:layout_height="@dimen/_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/_16dp"
                custom:status="available"
                />

            <include
                android:id="@+id/layout_filter_price_range"
                layout="@layout/layout_filter_price_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                app:layout_constraintTop_toBottomOf="@id/item_status_view_impl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.constraintlayout.motion.widget.MotionLayout
                app:motionDebug="NO_DEBUG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_filter_price_range"
                app:layoutDescription="@xml/scene_carousel_size_3"
                >

                <TextView
                    android:id="@+id/image_0"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginHorizontal="@dimen/margin_16dp"
                    android:src="@drawable/background_transparent_stroke"
                    android:elevation="@dimen/elevation_8"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/image_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginHorizontal="@dimen/margin_16dp"
                    android:src="@drawable/background_transparent_stroke"
                    android:elevation="@dimen/elevation_8"
                    app:layout_constraintStart_toEndOf="@id/image_0"
                    app:layout_constraintEnd_toStartOf="@id/image_2"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/image_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginHorizontal="@dimen/margin_16dp"
                    android:src="@drawable/background_transparent_stroke"
                    android:elevation="@dimen/elevation_8"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.constraintlayout.helper.widget.Carousel
                    android:id="@+id/carousel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:carousel_forwardTransition="@id/forward"
                    app:carousel_backwardTransition="@id/backward"
                    app:carousel_previousState="@+id/previous"
                    app:carousel_nextState="@+id/next"
                    app:carousel_infinite="true"
                    app:carousel_firstView="@id/image_1"
                    app:constraint_referenced_ids="image_0,image_1,image_2" />

            </androidx.constraintlayout.motion.widget.MotionLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth="match_parent"
                app:layout_constraintHeight="wrap_content"
                android:text="@string/text_activity_title"
                android:layout_margin="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth="match_parent"
                app:layout_constraintHeight="wrap_content"
                android:text="@string/text_activity_subtitle"
                android:layout_margin="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                />

            <TextView
                android:id="@+id/tv_sort_by_field"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth="match_parent"
                app:layout_constraintHeight="wrap_content"
                android:text="@string/text_sort_by_field"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                />

            <Spinner
                android:id="@+id/spn_sort_by_field"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth="match_parent"
                app:layout_constraintHeight="@dimen/_50dp"
                android:layout_marginHorizontal="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sort_by_field"
                />

            <TextView
                android:id="@+id/tv_filter_by_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth="match_parent"
                app:layout_constraintHeight="wrap_content"
                android:text="@string/text_filter_by_name"
                android:layout_marginHorizontal="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spn_sort_by_field"
                />

            <Spinner
                android:id="@+id/spn_filter_by_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth="match_parent"
                app:layout_constraintHeight="@dimen/_50dp"
                android:layout_marginHorizontal="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_filter_by_name"
                />


            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@color/color_transparent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/spn_filter_by_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:indeterminateTint="@color/purple_200"
                />

            <ImageView
                android:id="@+id/iv_msg_error"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_msg_error"
                android:visibility="gone"
                app:layout_constraintWidth_percent="0.29"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spn_filter_by_name"
                />

            <TextView
                android:id="@+id/tv_msg_error"
                style="@style/h_25_b_c_red_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/text_title_error"
                android:visibility="gone"
                app:layout_constraintVertical_bias="0.10"
                app:layout_constraintHeight="wrap_content"
                app:layout_constraintWidth="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_msg_error"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <include
                android:id="@+id/rv_hirings"
                layout="@layout/rv_hirings"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spn_filter_by_name"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_bottom_sheet_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_filter_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_payment_method_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_filter_fragment"
        app:layout_constraintEnd_toEndOf="@id/btn_filter_fragment"
        />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_filter_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>