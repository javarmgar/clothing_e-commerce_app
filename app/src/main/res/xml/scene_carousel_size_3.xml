<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    >
    <Transition
        android:id="@+id/forward"
        motion:constraintSetStart="@id/middle"
        motion:constraintSetEnd="@id/next"
        >

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />

    </Transition>

    <Transition
        android:id="@+id/backward"
        motion:constraintSetStart="@id/middle"
        motion:constraintSetEnd="@id/previous"
        >

        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />

    </Transition>

    <ConstraintSet android:id="@+id/previous">
        <Constraint
            android:id="@id/image_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            />

        <Constraint
            android:id="@id/image_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="@id/image_2"
            motion:layout_constraintEnd_toStartOf="@id/image_1"
            />

        <Constraint
            android:id="@id/image_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:id="@id/image_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            />

        <Constraint
            android:id="@id/image_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="@id/image_0"
            motion:layout_constraintEnd_toStartOf="@id/image_2"
            />

        <Constraint
            android:id="@id/image_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">
        <Constraint
            android:id="@id/image_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            />

        <Constraint
            android:id="@id/image_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="@id/image_1"
            motion:layout_constraintEnd_toStartOf="@id/image_0"
            />

        <Constraint
            android:id="@id/image_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            />
    </ConstraintSet>


</MotionScene>