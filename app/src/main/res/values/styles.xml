    <!--
    Guidelines for icons

    ic_<familySize>_<otherAttr>
        <familySize>  -> {xxs, xs, s, m, l, xl, xxl, xxxl}  :which is defined size
        <otherAttr>   -> {}                                 :still to be defined

    -->

    <style name="ic_xs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth">@dimen/ic_xs</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

</resources>