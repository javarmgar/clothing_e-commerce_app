<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--
        Guidelines for fonts

        h_<textSize>_<fontFamily>_<textStyle>_<gravity>
            <textSize>    -> {23,16,14,12,}
            <fontFamily>  -> {sb,m,r,}               -> {semibold, medium, regular}
            <textStyle>   -> {n,i,b}                 -> {normal, italic, bold}
            <gravity>     -> {c,l,r,}                -> {center,left,right}

        -->

    <!--Text Colors-->
    <style name="color_0">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="color_1">
        <item name="android:textColor">@color/color_text_primary_inverted</item>
    </style>

    <style name="color_2">
        <item name="android:textColor">@color/color_btn_text_primary</item>
    </style>



    <!--Text styles-->


    <style name="color_1.h_28_m_b_c">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">7</item>
    </style>

    <style name="color_1.h_13_r_n_c">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">7</item>
    </style>

    <style name="color_2.h_16_b_b_c">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="color_1.h_13_r_n_c.18em" parent="color_1.h_13_r_n_c">
        <item name="android:ems">18</item>
    </style>

    <!-- Buttons styles -->

    <style name="st_btn" />

    <style name="btn_relative_80_4_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth_percent">0.80</item>
        <item name="layout_constraintDimensionRatio">4:1</item>
    </style>

    <style name="btn_selector.btn_relative_80_4_1" parent="btn_relative_80_4_1">
        <item name="android:background">@drawable/bg_btn_selector</item>
    </style>

    <!--
    Guidelines for icons

    ic_<familySize>_<otherAttr>
        <familySize>  -> {xxs, xs, s, m, l, xl, xxl, xxxl}  :which is defined size
        <otherAttr>   -> {}                                 :still to be defined

    -->

    <style name="ic_xs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth">@dimen/ic_xs</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

</resources>